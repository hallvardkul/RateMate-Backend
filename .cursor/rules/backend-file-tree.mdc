├── 📁 .vscode/                # VS Code settings and launch configs
├── 📁 src/                    # 🎯 MAIN SOURCE CODE
│   ├── 📁 database/
│   │   ├── cosmosClient.ts           # Cosmos DB (MongoDB API) client
│   │   ├── dbMiddleware.ts           # Database middleware layer
│   │   ├── postgresClient.ts         # PostgreSQL client singleton
│   │   └── 📁 migrations/            # SQL migration scripts
│   ├── 📁 functions/          # 🔥 Azure Functions (HTTP triggers)
│   │   ├── auth.ts                   # User authentication
│   │   ├── brandAuth.ts              # Brand authentication
│   │   ├── brands.ts                 # Brand management
│   │   ├── categories.ts             # Product categories
│   │   ├── products.ts               # Product CRUD
│   │   ├── reviews.ts                # Reviews & ratings
│   │   ├── media.ts                  # Media upload/retrieval
│   │   └── user.ts                   # User management
│   ├── 📁 models/             # TypeScript data models
│   │   ├── user.ts
│   │   ├── product.ts
│   │   ├── review.ts
│   │   ├── brand.ts
│   │   └── media.ts
│   ├── 📁 services/           # Business logic layer
│   │   ├── reviewService.ts
│   │   ├── mediaService.ts
│   │   └── productCategoryService.ts
│   ├── 📁 utils/              # Helper utilities
│   │   ├── authMiddleware.ts
│   │   ├── corsMiddleware.ts
│   │   ├── blobStorage.ts
│   │   └── rateLimitMiddleware.ts
│   ├── 📁 types/              # TypeScript type definitions
│   ├── 📁 test/               # Test files
│   └── index.ts               # Main entry point
├── 📁 **node_modules/**       # 🔒 NPM dependencies (git ignored)
├── 📁 **dist/**               # 🔒 Compiled JS output (git ignored)
├── host.json                  # Azure Functions host config
├── package.json               # Dependencies and scripts
